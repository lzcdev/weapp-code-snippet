.playBody, .slider_body::after {
  /* position: relative; */
  width: 100%;
  height: 100%;
  background: url('https://s1.ax2x.com/2017/10/20/DtXrh.jpg') 0 / cover fixed;
  background-repeat: no-repeat;
}

.slider_body {
  display: flex;
  justify-content: center;
  align-items: center;
  /* width: 100%;
  height: 100%; */
  width: 80%;
  /* margin: 30px auto; */
  height: 400rpx;
  border-radius: 20rpx;
  text-align: center;
  position: relative;
  background-color: rgba(0, 0, 0, 0.3);
  overflow: hidden;
}

.slider_body::after {
  content: "";
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  filter: blur(30rpx);
  -webkit-filter: blur(30rpx);
  z-index: -1;
  border-radius: 20rpx;
  margin: -30px;
}

.slider {
  width: 500rpx;
}

.current_time {

  font-size: 28rpx;
  background: red;
}

.total_time {
  font-size: 28rpx;
}
